/* pages/detail/index.wxss */

page {
  margin-bottom:100rpx;
}

/* 头部 */

.NewFL {
  width: 100%;
  height: 100rpx;
  background: #fff;
  overflow: hidden;
  padding-top: 40rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

.NewFL-L {
  float: left;
  width: 30rpx;
  height: 52rpx;
  display: block;
}

.NewFL-R {
  float: right;
  width: 64rpx;
  height: 54rpx;
  display: block;
  position: relative;
  margin-right: 180rpx;
}

.NewFL-R img, .NewFL-L img {
  display: block;
  width: 100%;
}

#cartno {
  display:block;
  width:40rpx;
  height:40rpx;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
  background:#ff3636;
  color:#fff;
  border-radius:20rpx;
  text-align:center;
  line-height:40rpx;
  font-size:28rpx;  
  -webkit-text-size-adjust: none;
}

swiper {
  height: 600rpx;
}

swiper-item {
  text-align: center;
}

.slide-image {
  width: 586rpx;
  height: 586rpx;
}

/* 基本内容 */

.detail {
  background-color: #fff;
  padding: 30rpx 0;
  border-top: 1px solid #d7d7d7;
  overflow: hidden;
}

.detail .detail-warp {
  position: relative;
  overflow: hidden;
}

.detail .detail-warp .title {
  padding: 0 24rpx;
  line-height: 40rpx;
  color: #3f3f3f;
  font-size: 32rpx;
  overflow: hidden;
}

.detail .detail-warp .title icon {
  font-size: 28rpx;
  color: #999;
  display: block;
  line-height: 60rpx;
}

.detail .price {
  padding: 0 24rpx;
  line-height: 42rpx;
  margin-bottom: 30rpx;
}

.detail .price text {
  color: #ff3636;
  font-size: 40rpx;
  display: inline-block;
  vertical-align: middle;
  zoom: 1;
}

/* 价格信息 */
.price2 {
  padding-left: 24rpx;
}

.price-info {
  color: #999;
  font-size: 24rpx;
}

.price-info .gift {
  margin-right: 10rpx;
}

.price-info .point-rule {
  color: #ff3636;
  text-decoration: underline;
  margin-left: 24rpx;
}

.price-info .point-rule2 {
  color: #ff3636;
  text-decoration: underline;
  margin-left: 24rpx;
  display: inline-block;
}

.price2 .txt {
  border: 1px solid #e22020;
  border-radius: 10rpx;
  color: #ff3636;
  display: inline-block;
  font-size: 28rpx;
  height: 32rpx;
  line-height: 32rpx;
  margin: 0 5rpx 0 0;
  text-align: center;
  width: 32rpx;
}

.price-info .txt2 {
  margin-left: 5rpx;
  margin-right: 4rpx;
  width: 80rpx;
}

.price-line {
  border-bottom: 1px solid #d7d7d7;
  margin-top: 30rpx;
}

.tips-line {
  border-bottom: 30rpx solid #f1f2f6;
}

/*数量*/
.detail .num {
  margin: 40rpx 30rpx;
}

.detail .num .title {
  line-height: 40rpx;
  font-size: 32rpx;
  color: #222;
}

.detail .num .num-btn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  border: 2px solid #eee;
  border-radius: 8rpx;
}

.detail .num .num-btn > view {
  float: left;
  width: 80rpx;
  height: 80rpx;
  cursor: pointer;
  font-size: 56rpx;
  text-align:center;
}

.detail .num input {
  float:left;
  margin-top:1px;
  padding:6rpx;
  width:100rpx;
  height:68rpx;
  line-height:68rpx;
  text-align:center;
  border:none;
  font-size:32rpx;
  background:none;
  border-left:1px solid #eee;
  border-right:1px solid #eee;
}

.tipsL-line {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #666;
  clear: both;
  padding-left: 24rpx;
  background: #f1f2f6;
  margin-top: 50rpx;
}

/*更多选择*/

.tipsShow navigator {
  float: left;
  text-align: center;
  font-size: 24rpx;
  color: #222;
  width: 25%;
  margin-bottom:20rpx;
}

.tipsShow navigator image {
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: 0 auto;
}

.tipsShow navigator text {
  display: block;
  width: 118rpx;
  margin-top: 30rpx;
  line-height: 36rpx;
  color: #222;
  margin: 0 auto;
}

.forWhite {
  background-color: #fff;
  height: 40rpx;
  width: 100%;
}

/* 推荐 */
.ggtxt {
  padding: 30rpx;
  font-size: 30rpx;
  color: #666;
  background: #f5f5f5;
}

.ggtxt text {
  display: block;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.ggtxt image {
  width:100%;
  height: 180rpx;
  display:block;
}

/* 购物车 */
.addToCart {
  width: 100%;
  height: 80rpx;
  position: fixed;
  z-index: 999;
  bottom: 0;
  background: #fff;
  padding-bottom: 12rpx;
  padding-top: 12rpx;
  border-top: 1px solid #e3e3e3;
  left: 0;
}

.addToCart view {
  display: flex;
  margin: 0 auto;
  overflow: hidden;
  justify-content: center;
}

.addToCart .J_AddToCart {
  border-radius: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #1f49a6;
  width: 280rpx;
  margin: 0 40rpx;
}

.addToCart .J_AddToCart text {
  display: table;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  background: url(http://i0.feiheimg.com/img/m/item/shizi.png);
  background-repeat: no-repeat;
  background-size: 40rpx 40rpx;
  background-position: left center;
  padding-left: 60rpx;
}

/* 规则提示层  */

.isRuleShow {
  display: block;
}

.isRuleHide {
  display: none;
}

.ruleZhezhao {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 0;
  left: 0;
}

.ruleZhezhaoContent {
  padding: 20rpx 0;
  width: 80%;
  background: #e1d2b1;
  margin: 22% auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}

.ruleZhezhaoText {
  width: 80%;
  font-size: 30rpx;
  color: #856d5f;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 25rpx 0 25rpx 0;
}

.ruleZhezhaoText text:nth-child(1) {
  color: #fff;
  font-size: 40rpx;
  height: 60rpx;
  width: 60rpx;
  background: #664a2c;
  display: block;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}

.ruleZhezhaoText text:nth-child(2) {
  flex-wrap: wrap;
  width: 80%;
}

.ruleHide {
  height: 60rpx !important;
  width: 60rpx !important;
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  background-color: white;
  border-radius: 50%;
  font-size: 42rpx;
  text-align: center;
}

.rule {
  display: block;
  border: 1px solid #fff;
  width: 100rpx;
  text-align: center;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-radius: 30rpx;
  position: absolute;
  top: 10%;
  right: 5%;
}

/*  end  */
