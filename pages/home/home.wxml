<!-- pages/home/home.wxml -->
<!-- 导航条 -->
<view class="navbar">
  <text wx:for="{{navbars}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique" bindtap="navbarTap">
    {{item.navbarName}}
  </text>
</view>
<!-- 首页轮播 banner -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{banners}}" wx:key="{{item.id}}">
    <swiper-item>
      <image src="{{item.imgUrl}}" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>