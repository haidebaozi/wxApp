/* pages/points/index.wxss */

.header {
  display: flex;
  display: -webkit-flex;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  align-point_items: center;
  justify-content: center;
}

swiper {
  height: 210rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/* page .wx-swiper-dot {
