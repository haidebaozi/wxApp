.pointslist .point-title {
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 45rpx;
  background-color: #fff;
  background-image: url(http://img1.feiheimg.com/img/m/2.0.0/product/menu-icon.jpg);
  background-repeat: no-repeat;
  background-position: 30rpx 50%;
  background-size: 4rpx auto;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin:20rpx 0;
}

.points {
  overflow: hidden;
  border: 1px solid #f5f3f2;
  border-width: 6rpx 0;
  background: #fff;
}

.point_list {
  display: block;
  width: 50%;
  float: left;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f3f2;  
}

.point_list:nth-child(2n+1) {
  border-right: 1px solid #f5f3f2;
}

.point_list .pro-name {
  display: block;
  height: 48rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  word-break: break-all;
  color: #444;
}

.point_list image {
  width: 198rpx;
  height: 198rpx;
  display: block;
  margin: 0 auto;
}

.point_list .point-detail {
  font-size: 36rpx;
  color: #f6615b;
  line-height: 36rpx;
  display: block;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.point_list .point-detail i {
  font-size: 24rpx;
  font-weight: normal;
  color: #808080;
}

.point_list .pro-point i {
  font-size: 26rpx;
  color: #f6615b;
}

.point_list .pro-price text {
  font-size: 30rpx;
  color: #808080;
  text-decoration:line-through;
}